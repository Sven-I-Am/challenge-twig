{% extends 'base.html.twig' %}
{% block title %}About {{ name }}{% endblock %}
{% block menu %}
{{ parent() }}
    <ul class="list-group">
        <li class="list-group-item px-5 py-3 fs-5">Europe: {{ date|format_datetime(pattern="dd/mm/Y") }}</li>
        <li class="list-group-item px-5 py-3 fs-5">America: {{ date|format_datetime(pattern="mm/dd/Y") }}</li>
        <li class="list-group-item px-5 py-3 fs-5">Asia: {{ date|format_datetime(pattern="Y/mm/dd") }}</li>
    </ul>

{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ name }}!</h1>
        <p>{{ text }}</p>
    </div>
    <div class="example-wrapper">
        {{ quote() }}
    </div>
{% endblock %}
