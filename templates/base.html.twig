<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ page }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header class="sticky-top bg-dark text-info fs-5 d-flex justify-content-center align-items-center py-3">
        {% block header %}
            <h1>Hello {{ name }}!</h1>
        {% endblock %}
    </header>
    <aside class="float-start h-100">
        {% block menu %}
            <ul class="list-group">
                <li class="list-group-item px-5 py-3 fs-2"><a class="link-dark text-decoration-none" href="{{ path('homepage')}}">Home</a></li>
                <li class="list-group-item px-5 py-3 fs-2"><a class="link-dark text-decoration-none" href="{{ path('about-me')}}">About</a></li>
                <li class="list-group-item px-5 py-3 fs-5">{{ name|title }}</li>
            </ul>
        {% endblock %}
    </aside>
    <main class="d-flex flex-column justify-content-center align-items-center py-3">
    {% block content %}
        <section  class="position-absolute top-50 start-50 translate-middle">
            <div class="text-center fs-4">
                {{ form_start(form) }}
                <div class="col">
                    <div class="row mt-2">
                        {{ form_label(form.name) }}
                    </div>
                    <div class="row">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="row mt-2">
                        {{ form_row(form.save, {'attr': {'class': 'btn btn-lg btn-info rounded-pill'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        <div class="d-flex flex-column justify-content-center align-items-center py-3">
            {{ quote()|nl2br }}
        </div>
        </section>
    {% endblock %}
    </main>
    <footer class="fixed-bottom bg-dark text-info d-flex justify-content-center align-items-center py-3 mt-4 border-top">
        {% block footer %}&copy; Becode {% endblock %}
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
